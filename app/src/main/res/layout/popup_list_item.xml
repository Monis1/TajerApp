<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:minHeight="40dp"
        android:gravity="right|center_vertical"
        >


        <tawseel.com.tajertawseel.CustomBoldTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:text="@string/ryal_20"
            android:layout_marginRight="10dp"
            android:id="@+id/ryal_textView"

            />



        <View
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/circle_view"
            android:background="@drawable/solid_green_circle"
            android:layout_marginRight="10dp"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#cccc"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <tawseel.com.tajertawseel.CustomBoldTextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/pricing_scale"
            android:layout_marginRight="10dp"/>






    </LinearLayout>
<View android:background="#cccc"
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"/>

</LinearLayout>