<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#e6e6e6">

    <include layout="@layout/toolbar"
        android:id="@+id/toolbar" />

    <ScrollView android:layout_height="match_parent"
        android:layout_width="match_parent"
        >



        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:background="#e6e6e6">




            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#e6e6e6">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp"
                        android:gravity="center">


                        <ImageView
                            android:layout_marginLeft="20dp"
                            android:padding="3dp"
                            android:src="@drawable/person_image"
                            android:layout_centerVertical="true"
                            android:id="@+id/BtnCall"
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="30dp" />


                    </RelativeLayout>


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal|center"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp">

                        <tawseel.com.tajertawseel.CustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/person_ratings"
                            android:layout_marginLeft="10dp"
                            android:textDirection="anyRtl"

                            android:textColor="@android:color/black"
                            android:layout_marginBottom="14dp"
                            android:textSize="17sp" />

                        <RatingBar android:id="@+id/sp_ratingbar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:layout_gravity="center"
                            android:stepSize="1.0"
                            android:progressTint="#f7941e"
                            style="?android:attr/ratingBarStyleSmall"
                            android:rating="4"
                            android:layout_marginBottom="30dp"></RatingBar>

                        <tawseel.com.tajertawseel.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="4.0"
                            android:layout_marginLeft="10dp"
                            android:textDirection="anyRtl"

                            android:textColor="@android:color/black"
                            android:layout_marginBottom="10dp"
                            android:textSize="35sp"
                            android:id="@+id/customBoldTextView3"
                            android:gravity="center"
                            android:textAllCaps="false"
                            android:textStyle="normal|bold" />

                        <tawseel.com.tajertawseel.CustomBoldTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/person_ratings"
                            android:layout_marginLeft="10dp"
                            android:textDirection="anyRtl"

                            android:textColor="@android:color/black"
                            android:layout_marginBottom="20dp"
                            android:textSize="25sp"
                            android:id="@+id/customBoldTextView4"
                            android:gravity="center" />

                        <RatingBar android:id="@+id/sp_ratingbar2"
                            android:numStars="5"
                            android:layout_gravity="center"
                            android:stepSize="1.0"
                            android:progressTint="#f7941e"
                            android:rating="5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"></RatingBar>
<tawseel.com.tajertawseel.CustomBoldTextView
    android:layout_height="60dp"
    android:layout_width="150dp"
    android:text="Send Feedback"
    android:gravity="center"
    android:textSize="17sp"
    android:textColor="@android:color/white"
    android:background="@color/mainColor"
    android:id="@+id/BtnSendFeedback" />
                    </LinearLayout>


                </LinearLayout>


            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>
</LinearLayout>