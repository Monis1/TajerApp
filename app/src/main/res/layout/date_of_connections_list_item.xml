<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/container"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:minHeight="90dp">



                <LinearLayout
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circle_border"
                    android:orientation="vertical"
                    android:gravity="center"

                    android:id="@+id/products_container"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="1dp">


                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="5"
                        android:textSize="16dp"
                        android:textColor="@color/mainColor"
                        android:id="@+id/quantity_customer" />

                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/agents"
                        android:textSize="16dp"
                        android:textColor="@color/mainColor"/>


                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/dialog_tick_icon"
                    android:layout_alignBottom="@id/products_container"
                    android:layout_marginLeft="60dp"
                    android:id="@+id/tick_view"
                    android:visibility="invisible"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp">


                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp"
                        android:layout_gravity="right"
                        android:textDirection="rtl"
                        android:text="فساتين بنات ج...  "
                        android:id="@+id/group_name" />

                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/mainColor"
                        android:textSize="12dp"
                        android:layout_gravity="right"
                        android:text="1#"
                        android:id="@+id/GroupID" />






                </LinearLayout>
            </RelativeLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:background="#cccc"/>



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:background="#cccc"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/driver_picture"
                     />





                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/driver_picture">



                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/khalid_ahmed_al"
                        android:textSize="14dp"
                        android:textColor="@color/mainColor"/>

                    <RatingBar
                        style="?android:attr/ratingBarStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="30dp"
                        android:max="5"
                        android:numStars="5"
                        android:clickable="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                        android:isIndicator="true"

                        />




                </LinearLayout>







                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"

                    android:gravity="center">



                    <tawseel.com.tajertawseel.CustomBoldTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:05 AM"
                        android:textColor="@color/mainColor"
                        android:id="@+id/gtime" />





                        <tawseel.com.tajertawseel.CustomBoldTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/mainColor"
                            android:text="2016/3/5"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/gdate" />





                </LinearLayout>




            </RelativeLayout>











        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>